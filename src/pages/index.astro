---
import "../styles/global.css";
import Head from "../components/head.astro";
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import Button from "../components/Button.astro";
import { Image } from "astro:assets";
import circleMobile from "../assets/images/circle-mobile.svg";
import circleDesktop from "../assets/images/circle-image__desktop.svg";
import studioPortrait1440 from "../assets/images/Extended up studio portrait hair fix-1440.jpg";
import pepImage from "../assets/images/pep-image.jpg";
import tayosImage from "../assets/images/DSCF1530.jpg";

import { formatDate } from "../scripts/utils";
import { getCollection } from "astro:content";
const postCollection = await getCollection("posts");
---

<html lang="en">
  <Head />
  <body>
    <Header />
    <section class="homepage-hero">
      <div class="standard-container flex hm-pg-hero__wrapper">
        <div class="hm-pg-hero-text-section flex">
          <div class="hm-pg-hero__text-wrapper">
            <h1 class="hm-pg-hero__header">Hannah Ogunyinka</h1>
            <div class="hm-pg-hero__sub-heading-wrapper flex">
              <h2 class="hm-pg-hero__sub-heading">full stack designer</h2>
              <picture>
                <source
                  media="(max-width:768px)"
                  srcset={circleMobile.src}
                  width="13px"
                  height="13px"
                />
                <img
                  src={circleDesktop.src}
                  alt="full stop punctuation"
                  width="32px"
                  height="24px"
                />
              </picture>
            </div>
            <Button text="Let's work together" />
          </div>
        </div>
        <div class="hm-pg-hero-image-section">
          <Image
            src={studioPortrait1440}
            alt="hero image"
            class="hm-pg-hero-image"
            quality={"high"}
            loading={"eager"}
          />
        </div>
      </div>
    </section>
    <section class="homepage-intro-section">
      <div class="homepage-intro flex standard-container">
        <div class="hm-pg-intro-text-wrapper">
          <p class="hm-pg-intro-text">
            I'm passionate about building<span class="hm-pg-intro-text-colour">
              engaging</span
            >
             digital spaces on the internet
          </p>
        </div>
      </div>
    </section>
    <section class="homepage-projects">
      <div class="standard-container top-bottom-padding">
        <div class="hm-pg-projects-subheading-container">
          <h2 class="hm-pg-projects__sub-heading">Projects</h2>
          <picture>
            <source
              media="(max-width:768px)"
              srcset={circleMobile.src}
              aria-label="full stop punctuation"
              width="13px"
              height="13px"
            />
            <img
              src={circleDesktop.src}
              alt="full stop punctuation"
              width="32px"
              height="24px"
            />
          </picture>
        </div>
        <div class="hm-pg-projects-case-study-container flex">
          <div class="hm-pg-projects-case-study-img-container">
            <Image
              src={pepImage}
              alt="PEP PEP-case-study-img"
              class="PEP-case-study-img"
            />
          </div>
          <div class="hm-pg-projects-case-study-text-container">
            <span class="hm-pg-preheading preheading">Marketing</span>
            <a
              href="/projects/platinum-events-planning"
              class="hm-pg-projects-case-study-text-link"
            >
              <h3 class="hm-pg-projects-case-study-title">
                Platinum Events Planning
              </h3>
            </a>
            <p class="hm-pg-projects-case-study-description">
              Platinum Events Planning are an award winning wedding planning
              company that deliver unique and memorable occasions for their
              clients.
            </p>
            <a
              href="/projects/platinum-events-planning"
              class="hm-pg-projects-case-study-btn"
              aria-controls="read more btn"
              ><span class="sr-only hm-pg-projects-case-study-btn-text"
                >Read More</span
              ></a
            >
          </div>
        </div>
        <div class="hm-pg-projects-case-study-container flex">
          <div class="hm-pg-projects-case-study-img-container">
            <Image
              src={tayosImage}
              alt="PEP PEP-case-study-img-2"
              class="PEP-case-study-img-2"
            />
          </div>
          <div class="hm-pg-projects-case-study-text-container">
            <span class="hm-pg-preheading preheading">Ecommerce</span>
            <a
              href="/projects/tayos-mixing-bowl"
              class="hm-pg-projects-case-study-text-link"
            >
              <h3 class="hm-pg-projects-case-study-title">
                Tayo's Mixing Bowl
              </h3>
            </a>
            <p class="hm-pg-projects-case-study-description">
              Tayoâ€™s Mixing Bowl is a custom handmade brownies and cakes
              business creating high-end treats for special occasions.
            </p>
            <a
              href="/projects/tayos-mixing-bowl"
              class="hm-pg-projects-case-study-btn"
              aria-controls="read more link"
              ><span class="sr-only hm-pg-projects-case-study-btn-text"
                >Read More</span
              ></a
            >
          </div>
        </div>
        <div class="hm-pg-projects-cta-btn-wrapper flex">
          <Button text="See more projects" btnLink="/projects/" />
        </div>
      </div>
    </section>
    <section class="homepage-posts">
      <div class="standard-container top-bottom-padding">
        <div class="hm-pg-posts-title-text-container">
          <span aria-label="preheading" class="hm-pg-posts-preheading"
            >Recent Blog Posts</span
          >
          <h2 class="hm-pg-posts__sub-heading">Posts</h2>
          <picture>
            <source
              media="(max-width:768px)"
              srcset={circleMobile.src}
              width="13px"
              height="13px"
            />
            <img
              src={circleDesktop.src}
              alt="full stop punctuation"
              width="32px"
              height="24px"
            />
          </picture>
        </div>
        <div class="hm-pg-posts-container flex">
          {
            postCollection.map((post) => (
              <div class="hm-pg-single-post-container">
                <div class="hm-pg-single-post-img-container">
