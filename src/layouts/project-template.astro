---
import FeatureList from "../components/feature-list.astro";
import ProjectVideo from "../components/project-video.astro";
import { Image } from "astro:assets";
import pepImage from "../assets/images/pep-image.jpg";
import videoWebm from "../assets/project-images/tayo-project-video.webm";

const {
  title,
  projectDescription = "Decadent brownies made to order from our kitchen to your door!!!",
  featureListTextMd1,
  featureListTextMd2,
  featureListTextMd3,
  featureListTextMd4,
  featureListTextMd5,
  featureListTextMd6,
  projectImage1md,
  projectImage1mdalt,
  projectImage2md,
  projectImage2mdalt,
  projectImage3md,
  projectImage3mdalt,
  projectImage4md,
  projectImage4mdalt,
  projectImage5md,
  projectImage5mdalt,
  projectImage6md,
  projectImage6mdalt,
  projectVideoUrl,
  subtitle1,
  description1,
  subtitle2,
  description2,
  subtitle3,
  description3,
  subtitle4,
  description4,
} = Astro.props.frontmatter;

console.log(Astro.props.frontmatter);
---

<main class="project-template__main-content">
  <section>
    <section>
      <div class="flex projects-hero-container">
        <div class="flex project-hero__title-box">
          <h1 class="project-hero__h1">{title}</h1>
          <h2 class="project-hero__h2">{projectDescription}</h2>
        </div>
        <div class="flex project-hero__feature-list-box">
          <ul class="project-hero__feature-list">
            <FeatureList featureListText={featureListTextMd1} />
            <FeatureList featureListText={featureListTextMd2} />
            <FeatureList featureListText={featureListTextMd3} />
            <FeatureList featureListText={featureListTextMd4} />
            <FeatureList featureListText={featureListTextMd5} />
            <FeatureList featureListText={featureListTextMd6} />
          </ul>
        </div>
      </div>
    </section>
    <section>
      <div class="inner-container-85rem-with-block-padding">
        <Image
          src={projectImage1md}
          class="project-1st-img"
          alt={projectImage1mdalt}
          loading={"eager"}
        />
      </div>
    </section>
    <section>
      <div
        class="flex inner-container-85rem-with-block-padding project-template-third-sec-container"
      >
        <div class="flex project-template-third-sec-col-lft">
          <h2 class="project-template-third-sec__h2">{subtitle1}</h2>
        </div>
        <div class="flex project-template-third-sec-col-rght">
          <p
            class="project-template-third-sec__p"
            style="white-space: pre-line;"
          >
            {description1}
          </p>
        </div>
      </div>
    </section>
    <section>
      <div class="inner-container-1920">
        <img
          src="https://pinegrow.com/placeholders/img12.jpg"
          class="project-template-fourth-sec-img"
          alt=""
          width="1920"
          height="1080"
        />
      </div>
    </section>
    <section>
      <div
        class="flex inner-container-85rem-with-block-padding project-template-fifth-section-container"
      >
        <div class="flex project-template-third-sec-col-lft">
          <h2 class="project-template-third-sec__h2">{subtitle2}</h2>
        </div>
        <div class="flex project-template-third-sec-col-rght">
          <p style="white-space: pre-line;">
            {description2}
          </p>
        </div>
      </div>
    </section>
    <section>
      <div
        class="flex inner-container-85rem-with-block-padding project-template-column-gap"
      >
        <div class="flex project-template-fifth-section-col-lft">
          <img
            src="https://pinegrow.com/placeholders/img13.jpg"
            class="project-template-fifth-section-lft-img"
          />
        </div>
        <div class="flex project-template-fifth-section-col-rght">
          <img
            src="https://pinegrow.com/placeholders/img15.jpg"
            class="project-template-fifth-section-rt-img"
          />
        </div>
      </div>
    </section>
    <section>
      <div
        class="flex inner-container-85rem-with-block-padding project-template-seventh-section-container"
      >
        <div class="flex project-template-third-sec-col-lft">
          <h2 class="project-template-third-sec__h2">{subtitle3}</h2>
        </div>
        <div class="flex project-template-third-sec-col-rght">
          <p style="white-space: pre-line;">
            {description3}
          </p>
        </div>
      </div>
    </section>
    <section>
      <div class="inner-container-1920">
        <img
          src="https://pinegrow.com/placeholders/img12.jpg"
          class="project-template-fourth-sec-img"
        />
      </div>
    </section>
    <section>
      <div
        class="flex inner-container-85rem-with-block-padding project-template-column-gap project-template-nineth-section-container"
      >
        <div class="flex project-template-nineth-sec-col-lft">
          <div>
            <h2
              class="project-template-nineth-sec__h2 project-template-third-sec__h2"
            >
              {subtitle4}
            </h2>
            <p style="white-space: pre-line;">
              {description4}
            </p>
          </div>
        </div>
        <div
          class="flex project-template-nineth-sec-col-rght project-template-nineth-section-video-container"
        >
        <video
        autoplay
        loop
        muted
        playsinline
        class="project-template-nineth-sec-video"
        width="640"
        height="360"
      >
        Your browser does not support the video tag.
        <source src={projectVideoUrl} type="video/mp4"  />
      </video>
        </div>
      </div>
    </section>
    <section>
      <div class="inner-container-85rem-with-block-padding">
        <img
          class="project-template-tenth-sec-img"
          src="https://pinegrow.com/placeholders/img18.jpg"
        />
      </div>
    </section>
  </section>
</main>
<style>
  /* ------------------ Hero section ----------------------- */
  /* ----------------------------------------------------- */
  /* margin top necessary to avoid navigation blocking content */
  .project-template__main-content {
    margin-top: 6rem;
  }

  /* ------------------ Project Hero section ----------------------- */
  /* --------------------------------------------------------------- */
  .projects-hero-container {
    max-width: 85rem;
    min-height: 300px;
    padding-inline: 2.5rem;
    margin-inline: auto;
  }

  .project-hero__title-box {
    width: 70%;
    flex-direction: column;
    justify-content: flex-end;
  }

  .project-hero__feature-list-box {
    width: 30%;
    flex-direction: column;
    justify-content: flex-end;
  }

  .project-hero__h1 {
    font-weight: var(--fw-sub-heading);
    margin-bottom: 2.5rem;
    letter-spacing: normal;
    font-family: "Inter", sans-serif;
    text-transform: uppercase;
  }

  .project-hero__h2 {
    color: var(--accent-color);
    max-width: 22ch;
    font-weight: var(--fw-sub-heading);
    letter-spacing: 0.8;
    margin-bottom: 0rem;
  }

  .project-hero__feature-list {
    text-align: right;
    font-weight: var(--fw-body-text);
    letter-spacing: 0.03rem;
    line-height: 1.5;
    margin-bottom: 0rem;
    font-size: var(--fs-5);
  }

  .project-hero__feature-item-text {
    letter-spacing: 0.03rem;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .projects-hero-container {
      flex-direction: column;
    }

    .project-hero__title-box {
      width: 100%;
      flex-direction: column;
      justify-content: flex-end;
    }

    .project-hero__h2 {
      margin-bottom: 2rem;
    }

    .project-hero__feature-list-box {
      width: 100%;
      flex-direction: column;
      align-items: flex-start;
    }

    .project-hero__feature-list {
      text-align: left;
    }
  }

  /* ---------------- section two------------------------------ */
  .project-1st-img {
    width: 100%;
    height: 100%;
    aspect-ratio: 2/1;
    object-fit: cover;
    object-position: top;
    display: block;
  }

  /* ---------------- section three------------------------------ */
  .project-template-third-sec-container {
    padding-block: 5rem;
  }
  .project-template-third-sec-col-lft {
    width: 55%;
    align-items: center;
  }

  .project-template-third-sec-col-rght {
    width: 45%;
    align-items: center;
  }

  .project-template-third-sec__h2 {
    max-width: 20ch;
    font-weight: var(--fw-sub-heading);
    letter-spacing: 0.8;
    margin-bottom: 0rem;
  }

  @media (max-width: 768px) {
    .project-template-third-sec-container {
      flex-direction: column;
      padding-block: 0rem;
    }

    .project-template-third-sec-col-lft {
      width: 100%;
      justify-content: flex-start;
    }

    .project-template-third-sec-col-rght {
      width: 100%;
      justify-content: flex-start;
    }

    .project-template-third-sec__h2 {
      margin-bottom: 2rem;
    }

    .project-template-third-sec__p {
      margin-bottom: 0;
      white-space: pre-line;
    }
  }

  /* ---------------- section four------------------------------ */
  .project-template-fourth-sec-img {
    width: 100%;
    height: 80%;
    object-fit: cover;
    object-position: center 0;
  }

  .project-template-column-gap {
    column-gap: 3rem;
  }

  /* ---------------- section five------------------------------ */
  .project-template-fifth-section-lft-img {
    width: 100%;
    height: 100%;
    margin-block: 2rem;
    object-fit: cover;
  }

  .project-template-fifth-section-rt-img {
    width: 100%;
    margin-block: 2rem;
    height: 100%;
    object-fit: cover;
  }

  .project-template-fifth-section-col-lft {
    width: 30%;
    max-height: 50rem;
    align-items: center;
  }

  .project-template-fifth-section-col-rght {
    width: 70%;
    max-height: 50rem;
    align-items: center;
  }

  @media (max-width: 768px) {
    .project-template-fifth-section-container {
      flex-direction: column;
    }
  }

  /* ---------------- section seven------------------------------ */
  @media (max-width: 768px) {
    .project-template-seventh-section-container {
      flex-direction: column;
    }
  }

  /* ---------------- section nine------------------------------ */
  .project-template-nineth-sec__h2 {
    margin-bottom: 2rem;
  }

  .project-template-nineth-sec-video {
    width: 100%;
    height: 100%;
  }

  .project-template-nineth-section-video-container {
    max-height: 70rem;
  }

  .project-template-nineth-sec-col-lft {
    width: 40%;
    align-items: center;
  }

  .project-template-nineth-sec-col-rght {
    width: 60%;
    align-items: center;
  }

  @media (max-width: 1280px) {
    .project-template-nineth-section-container {
      flex-direction: column;
      row-gap: 2rem;
    }

    .project-template-nineth-sec-col-lft {
      width: 100%;
    }

    .project-template-nineth-sec-col-rght {
      width: 100%;
    }
  }

  /* ---------------- section ten------------------------------ */

  .project-template-tenth-sec-img {
    width: 100%;
  }
</style>
